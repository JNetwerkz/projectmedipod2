<div class="container-fluid">
  <h1>Lists of All Events</h1>
  <h3>Ongoing Events</h3>
  <div class="table-responsive">
    <table class="table table-bordered">
      <% events.forEach(function(event,i){ %>
        <% if (moment(event.dateto).format('DD MMM YYYY') >= moment().format('DD MMM YYYY')) { %>
          <tr>
            <th>Event Name</th>
            <th>Topic of Talk</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Location</th>
            <th rowspan="2">
              <form action="/admin/<%= event._id %>" method="get">
                <button type="submit" class='btn btn-primary'>Attendance</button>
              </form>
              <form action="/admin/eventedit/<%= event._id %>" method="get">
                <button type="submit" class='btn btn-warning'>Edit Event</button>
              </form>
              <form action="/admin/<%= event._id %>?_method=DELETE" method="post">
                <button type="submit" class='btn btn-danger'>Delete Event</button>
              </form>
            </th>
          </tr>
          <tr>
            <td>
              <%= event.name %>
            </td>
            <td>
              <%= event.subname %>
            </td>
            <td>
              <%= moment(event.datefrom).format('DD MMM YYYY') %>
            </td>
            <td>
              <%= moment(event.dateto).format('DD MMM YYYY') %>
            </td>
            <td>
              <%= event.location %>
            </td>
          </tr>
          <% } %>
            <% }) %>
    </table>
  </div>
  <h3>Past Events</h3>
  <div class="table-responsive">
    <table class="table table-bordered">
      <% events.forEach(function(event,i){ %>
        <% if (moment(event.dateto).format('DD MMM YYYY') < moment().format('DD MMM YYYY')) { %>
          <tr>
            <th>Event Name</th>
            <th>Topic of Talk</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Location</th>
            <th rowspan="2">
              <form action="/admin/<%= event._id %>" method="get">
                <button type="submit" class='btn btn-primary'>Attendance</button>
              </form>
              </form>
              <form action="/admin/<%= event._id %>?_method=DELETE" method="post">
                <button type="submit" class='btn btn-danger'>Delete Event</button>
              </form>
            </th>
          </tr>
          <tr>
            <td>
              <%= event.name %>
            </td>
            <td>
              <%= event.subname %>
            </td>
            <td>
              <%= moment(event.datefrom).format('DD MMM YYYY') %>
            </td>
            <td>
              <%= moment(event.dateto).format('DD MMM YYYY') %>
            </td>
            <td>
              <%= event.location %>
            </td>
          </tr>
          <% } %>
            <% }) %>
    </table>
  </div>
</div>
