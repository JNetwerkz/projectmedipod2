<div class="container-fluid form">
  <h1>Create Event Page</h1>
  <h4>Instructions for create event form</h4>
  <p>1) Fill in the details of your event (Road Show or Seminar)</p>
  <p>2) Choose which promotions that would be included in this event</p>
  <%# <form class="/eventcreate" method="post">%>
  <form method="post" data-parsley-validate="">
    <h4>Promotions</h4>
    <div class="form-group">
      <select name="promocheck" required>
        <% promos.forEach(function(event,i){ %>
          <option value="<%= event._id %>"><%= event.name %></option>
          <% }) %>
        </select>
    </div>
    <div class="form-group">
      <label for="eventname">Event Name <span class="mandatory">*</span> :
        <input required type="text" name="eventname" class='form-control' id="eventname" required data-parsley-error-message="Name of event required">
      </label>
    </div>
    <div class="form-group">
      <label for="subeventname">Topic Name <span class="mandatory">*</span> :
        <input type="text" name="subeventname" class='form-control' id="subeventname" placeholder="Diabetes" required data-parsley-error-message="Subname of event required (Topic of talk)">
      </label>
    </div>
    <div class="form-group">
      <label for="datefrom">Event Start Date <span class="mandatory">*</span> :
        <input type="date" name="datefrom" class="form-control" id="datefrom" required data-parsley-error-message="Please enter valid start date">
      </label>
    </div>
    <div class="form-group">
      <label for="datetill">Event End Date <span class="mandatory">*</span> :
        <input type="date" name="datetill" class="form-control" id="datetill" required data-parsley-error-message="Please enter valid end date">
      </label>
    </div>
    <div class="form-group">
      <label for="location">Location of Event <span class="mandatory">*</span> :
        <input type="text" name="location" class="form-control" id="location" placeholder="Orchard" required data-parsley-error-message="Please enter location of event held">
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>
