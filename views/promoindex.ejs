<div class="container-fluid">
  <h1>Promotions Index</h1>
  <a href="/admin/promotioncreate"><button class="btn btn-info" style="margin-bottom: 20px;">Create Promotion</button></a>
  <div class="table-responsive">
    <table class="table table-bordered">
      <% promos.forEach(function(promo,i){ %>
        <tr>
        <th rowspan="2">
        <%= promo.name %>
        </th>
        <th>Promotion Prefix</th>
        <th>Promotion Postfix (Agency)</th>
        <th>Validity (Days)</th>
        <th>Clinic hosted</th>
        <th rowspan="2">
        <form action="/admin/promotion/<%= promo._id %>?_method=put">
        <button type="submit" class='btn btn-primary adminactionbtn'>Edit Promotion</button>
        </form>
        <form action="/admin/promotion/<%= promo._id %>?_method=delete" method="POST">
        <button type="submit" class='btn btn-danger adminactionbtn' onclick="return confirm('Delete Promotion?')">Delete Promotion</button>
        </form>
        </th>
        </tr>
        <tr>
        <td>
        <%= promo.promocodeprefix %>
        </td>
        <td>
        <%= promo.agencyprefix %>
        </td>
        <td>
        <%= promo.validity %>
        </td>
        <td>
        <%= promo.clinic[0].name %>
        </td>
        </tr>
        <% }) %>
      </table>
    </div>
</div>
