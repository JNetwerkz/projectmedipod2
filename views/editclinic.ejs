<div class="container-fluid form">
  <h1>Edit Clinic</h1>
  <form action="?_method=put" method="post" data-parsley-validate="">
    <div class="form-group row">
      <label class="col-sm-3 col-form-label text-right" for="clinicname">Clinic name:
      </label>
        <div class="col-sm-9">
        <input type="text" name="clinicname" class="form-control" id="clinicname" required data-parsley-error-message="Name of Clinic required" value="<%= clinic.name %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label text-right" for="clinicnum">Clinic Phone Number:
      </label>
        <div class="col-sm-9">
        <input type="text" name="number" class="form-control" id="clinicnum" required data-parsley-length="[8,8]" data-parsley-error-message=" Please enter clinic contact number (8 Digits)" value="<%= clinic.contact_number %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label text-right" for="clinicadd1">Address 1:
      </label>
        <div class="col-sm-9">
        <input type="text" name="clinicadd1" class="form-control" id="clinicadd1" required data-parsley-error-message="Address of clinic required" value="<%= clinic.address1 %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label text-right" for="clinicadd2">Address 2:
      </label>
        <div class="col-sm-9">
        <input type="text" name="clinicadd2" class="form-control" id="clinicadd2" required data-parsley-error-message="Address of clinic required" value="<%= clinic.address2 %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label text-right" for="clinicpostal">Postal Code:
      </label>
        <div class="col-sm-9">
        <input type="number" name="postalcode" class="form-control" id="clinicpostal" required data-parsley-length="[6,6]" data-parsley-error-message="Please enter valid postal code (6 Digits)" value="<%= clinic.postalcode %>">
      </div>
    </div>
    <div class="row">
      <button type="submit" class="btn btn-primary">Update Clinic</button>
    </div>
  </form>
</div>
